#!/bin/bash

# bail early.
if [ -z ${DOTFILES_PATH+x} ]; then
	exec /usr/bin/geany "$@"
fi

# need a display to spawn.
if [ -z ${DISPLAY+x} ]; then
	echo "$DISPLAY not set."
	exit
fi


CONFIGDIR=${DOTFILES_PATH}/configs/geany

disp=$( echo $DISPLAY | sed 's@:@_@g;s@/@_@g' )
host=$( hostname )
socket=${CONFIGDIR}/geany_socket_${host}_${disp}
real=$( readlink $socket )

if ! is-valid-geany-socket $socket > /dev/null 2>&1 ; then
	# invalid socket
	rm -rf $socket
	if [ -e $real ] ; then
		rm -rf $real
	fi
	nohup /usr/bin/geany --config=${DOTFILES_PATH}/configs/geany/ "$@" > /dev/null 2>&1 &
	exit
else
	# valid geany socket

	# geany without arguments will open a new instance. do not do that.
	if [ "$#" -eq 0 ]; then
		echo "geany instance already open. exit."
		exit
	fi
fi

exec /usr/bin/geany --config=${DOTFILES_PATH}/configs/geany/ "$@"
