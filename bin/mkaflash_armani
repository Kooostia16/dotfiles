cd /home/thewisenerd/bin/armani_zipper/

rm -rf workspace
rm -rf unpack
rm -rf boot_new.img

cd /home/thewisenerd/works/kernel_armani/
lesser_modules
dtbTool2 -o dt.img -s 2048 -p scripts/dtc/ arch/arm/boot/
mkdir -p releases
cd /home/thewisenerd/bin/armani_zipper/

mkboot boot.img unpack

mv /home/thewisenerd/works/kernel_armani/workspace/zImage unpack/zImage
mv /home/thewisenerd/works/kernel_armani/dt.img           unpack/dt.img

mkboot unpack boot_new.img

rm -rf unpack

mv boot_new.img flashable/boot.img
mv /home/thewisenerd/works/kernel_armani/workspace/modules flashable/modules

cd flashable

zip -r -y -q output *

mv output.zip ../

cd ../

rm -rf flashable/modules
rm -rf flashable/system
rm -rf flashable/boot.img

rm -rf workspace
rm -rf /home/thewisenerd/works/H1S_kernel/workspace/


mv output.zip /home/thewisenerd/works/H1S_kernel/output.zip

cd /home/thewisenerd/works/H1S_kernel/

mkdir -p releases
mv output.zip releases/output_`date +%d_%b_%Y``scripts/setlocalversion`.zip

echo OUTPUT: releases/output_`date +%d_%b_%Y``scripts/setlocalversion`.zip
